<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Page Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/0a188b4b28.js" crossorigin="anonymous"></script>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='/css/styles.css'>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fa-solid fa-magnifying-glass"></i>
                Ask Plataform
            </a>
    </nav>
    <section>
        <div>
            <div class="container-create-ask">
                <div class="box-content-create">
                    <a href="/" class="btn-style">
                        <i class="fa-solid fa-left-long"></i>
                        Voltar
                    </a>
                    <a href="/ask" class="btn-style">
                        <i class="fa-solid fa-comment"></i>
                        Perguntar
                    </a>
                </div>
            </div>
            <div class="card-element">
                <div class="card-box">
                    <h1><%=data.title%></h1>
                    <hr>
                    <p><%=data.content%></p>
                    <h3>Sua Resposta</h3>
                    <div>
                        <form action="/answer" method="post">
                            <div class="mb-3">
                                <textarea class="form-control" name="content" id="exampleFormControlTextarea1" rows="5"></textarea>
                                <input name="answerId" type="hidden" value="<%=data.id%>">
                              </div>
                              <button type="submit" class="btn-style-form ">Enviar resposta</button>
                        </form>
                    </div>
                    <div class="answer-container">
                        <h4>Ãšltimas respostas</h4>
                        <hr>
                        <%answers.forEach(element => {%>
                            <p><%=element.content%></p>
                        <%})%>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
</body>
</html>